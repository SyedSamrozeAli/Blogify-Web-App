<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("../partials/head.ejs") %>
</head>

<body>
  <div class="bcontainer">
    <%- include("../sidebar.ejs") %>
    <div class="content">
      <h1>Update Blog</h1>
      <% if(locals.msg){ %>

      <div id="myModal" class="modal">
        <div class="modal-content">
          <span class="close">&times;</span>
          <p><%= locals.msg %></p>
        </div>
      </div>
      <% } %>
      <% const url=`/dashboard/update-post-form/${cuser.username}`; %>
      <form action="<%=url%>" method="POST" id="updateForm">
        <% if(locals.noPostMsg){ %>
        <h2 style="font-weight: 400; margin-top: 50px;"><%= locals.noPostMsg %></h3>
          <% }else{console.log(blogs) ; let value=0; blogs.forEach((blog)=>{ %>
          <div class="post delete-post">
            <input type="radio" name="options" id="radio" value="<%= blog._id %>">
            <h3><%= blog.title %></h3>
          </div>
          <% value++;}) %>
          <input type="submit" value="Continue" class="button">
          <% }%>
      </form>
    </div>
  </div>
  </div>


  <script>
        document.addEventListener("DOMContentLoaded", function() {

            // Get the modal
            var modal = document.getElementById("myModal");
    
            // Get the <span> element that closes the modal
            var span = document.getElementsByClassName("close")[0];
            
      if (modal && span) {


        // When the user clicks on <span> (x), close the modal
        span.onclick = function() {
          modal.style.display = "none";
        };

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function(event) {
          if (event.target == modal) {
            modal.style.display = "none";
          }
        };
      }
    });
  </script>
</body>

</html>